[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# shortcuts
alias \
	v='$EDITOR' \
	p='paru' \
	music='ncmpcpp' \
	py='python3' \
	yt='yt-dlp'

# flags
alias \
    r=". ranger" \
	du='du -h' \
	cp='cp -ivp' \
	mv='mv -iv' \
	mkdir='mkdir -pv' \
	make='make -j$(nproc)' \
	ffmpeg='ffmpeg -hide_banner' \
	ffprobe='ffprobe -hide_banner' \
	mpvm='mpv --profile=movie' \
	ssh='TERM=xterm-color ssh' \
	sshpi='TERM=xterm-color ssh pi@192.168.1.77' \
	sshaz='TERM=rxvt ssh jad@20.55.40.249' \
	ag="ag --pager='less -XFR'" \
	discord='discord --no-sandbox'

# colours
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto"

# long
alias \
	cl="curl -F 'clbin=<-' https://clbin.com" \
	insta='instaloader --stories --highlights --igtv --fast-update' \
	gp='git add . && git commit -m "$(date +%Y%m%d-%H%M%S)" && git push -u origin master' \
	pullpi='rclone copy pi:/media/ext/lives /media/storage/music/vault/media/community/lives -P' \
	wavtoflac='flac --best --delete-input-file -e -p -V -f --keep-foreign-metadata *.wav' \
	texview='latexmk -pdf -pvc *.tex'
   #sl='rm -f config.h; sudo make clean install' \
